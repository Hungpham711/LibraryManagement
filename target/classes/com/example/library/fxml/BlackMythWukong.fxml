<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Nửa màn hình trên: Câu hỏi và đáp án -->
    <Pane fx:id="topPane" layoutY="0.0" prefHeight="400.0" prefWidth="800.0">
        <!-- Ảnh nền cho phần câu hỏi -->
        <ImageView fx:id="questionBackground" fitHeight="400.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="false">
            <Image url="@../assets/tiles.png" /> <!-- Thay thế đường dẫn hình ảnh -->
        </ImageView>

        <!-- Nút Menu (3 gạch) -->
        <Button layoutX="750.0" prefHeight="30.0" prefWidth="30.0" style="-fx-font-size: 24;" text="☰" />

        <!-- Hiển thị câu hỏi -->
        <Label fx:id="questionLabel" layoutX="50.0" layoutY="50.0" prefHeight="100.0" prefWidth="700.0" text="Câu hỏi sẽ hiển thị ở đây" wrapText="true">
            <font>
                <Font size="24.0" /> <!-- Kích thước font lớn hơn -->
            </font>
        </Label>

        <StackPane layoutX="50.0" layoutY="170.0" prefHeight="80.0" prefWidth="300.0">
         <children>
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_LEFT">
                <Image url="@../assets/monster/A/01-Idle/__Bat02_Idle_001.png" />
            </ImageView>
         </children></StackPane>
        <StackPane layoutX="450.0" layoutY="170.0" prefHeight="80.0" prefWidth="300.0">
         <children>
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_LEFT" />
         </children></StackPane>
        <StackPane layoutX="50.0" layoutY="270.0" prefHeight="80.0" prefWidth="300.0">
         <children>
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_LEFT" />
         </children></StackPane>
        <StackPane layoutX="450.0" layoutY="270.0" prefHeight="80.0" prefWidth="300.0">
         <children>
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_LEFT" />
         </children></StackPane>
    </Pane>

    <!-- Nửa màn hình dưới: Player và Monster -->
    <Pane fx:id="bottomPane" layoutY="400.0" prefHeight="400.0" prefWidth="800.0">

        <!-- Ảnh nền cho phần chiến đấu -->
        <ImageView fx:id="battleBackground" fitHeight="400.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="false">
            <Image url="@../assets/sky_night/5.png" /> <!-- Hình nền chiến đấu -->
        </ImageView>

        <!-- Hàng rào phía trên -->
        <ImageView fx:id="topFence" fitHeight="9.0" fitWidth="800.0" layoutY="0.0" pickOnBounds="true" preserveRatio="false">
            <Image url="@../assets/tiles.png" /> <!-- Hàng rào trên -->
        </ImageView>

        <!-- Hàng rào phía dưới -->
        <ImageView fx:id="bottomFence" fitHeight="9.0" fitWidth="800.0" layoutY="391.0" pickOnBounds="true" preserveRatio="false">
            <Image url="@../assets/tiles.png" /> <!-- Hàng rào dưới -->
        </ImageView>

        <!-- Hàng rào bên trái -->
        <ImageView fx:id="leftFence" fitHeight="400.0" fitWidth="8.0" layoutX="0.0" pickOnBounds="true" preserveRatio="false">
            <Image url="@../assets/tiles.png" /> <!-- Hàng rào bên trái -->
        </ImageView>

        <!-- Hàng rào bên phải -->
        <ImageView fx:id="rightFence" fitHeight="400.0" fitWidth="8.0" layoutX="792.0" pickOnBounds="true" preserveRatio="false">
            <Image url="@../assets/tiles.png" /> <!-- Hàng rào bên phải -->
        </ImageView>

        <!-- Hiển thị Player -->
        <ImageView fx:id="player" fitHeight="100.0" fitWidth="100.0" layoutX="316.0" layoutY="270.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../assets/wukong/wukong_left.jpg" /> <!-- Thay thế đường dẫn hình ảnh -->
        </ImageView>

        <!-- Hiển thị các quái vật -->
        <ImageView fx:id="monster1" fitHeight="80.0" fitWidth="80.0" layoutX="155.0" layoutY="239.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../assets/monster/A/01-Idle/__Bat02_Idle_001.png" /> <!-- Thay thế đường dẫn hình ảnh -->
        </ImageView>
        <ImageView fx:id="monster2" fitHeight="80.0" fitWidth="80.0" layoutX="300.0" layoutY="350.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../assets/monster2.png" /> <!-- Thay thế đường dẫn hình ảnh -->
        </ImageView>
        <ImageView fx:id="monster3" fitHeight="80.0" fitWidth="80.0" layoutX="500.0" layoutY="350.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../assets/monster3.png" /> <!-- Thay thế đường dẫn hình ảnh -->
        </ImageView>
        <ImageView fx:id="monster4" fitHeight="80.0" fitWidth="80.0" layoutX="700.0" layoutY="350.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../assets/monster4.png" /> <!-- Thay thế đường dẫn hình ảnh -->
        </ImageView>
    </Pane>

</AnchorPane>
